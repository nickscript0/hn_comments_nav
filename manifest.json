{
    "name": "HN Keyboard Nav",
    "version": "0.2",
    "description": "Navigate Hacker News (news.ycombinator.com) comments using the keyboard.",
    "content_scripts": [
        {
            "matches": ["https://news.ycombinator.com/*"],
            "js": ["build/main.bundle.js"]
        }
    ],
    "icons": { "16": "icons/letter-h-icon-16.png", "48": "icons/letter-h-icon-48.png", "128": "icons/letter-h-icon-128.png" },
    "manifest_version": 3
}
